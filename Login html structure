<div style="background-color: #f5f5f5; padding: 20px; max-width: 400px; margin: auto;">
  <h2>Login</h2>
  <form [formGroup]="loginForm" onSubmit="onSubmit()" novalidate>
    <div>
      <label for="username">Username:</label>
      <input type="text" formControlName="username" id="username" required>
      <p *ngIf="loginForm.get('username')?.invalid">Username is required.</p>
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" formControlName="password" id="password" required>
      <p *ngIf="loginForm.get('password')?.invalid">Password is required.</p>
    </div>
    <div>
      <label for="role">Role:</label>
      <select formControlName="role" id="role" required>
        <option value="">Select Role</option>
        <option value="SuperUser">SuperUser</option>
        <option value="Approver">Approver</option>
        <option value="User">User</option>
        <option value="ReadOnly">ReadOnly</option>
      </select>
      <p *ngIf="loginForm.get('role')?.invalid">Role is required.</p>
    </div>
    <button type="submit" [disabled]="loginForm.invalid">Login</button>
  </form>
</div>
