import { Component } from '@angular/core';
import { RouterOutlet } from '@angular/router';
import { ButtonModule } from 'primeng/button';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [RouterOutlet, ButtonModule], // We imported ButtonModule here
  template: `
    <div style="padding: 2rem; text-align: center;">
      <h2>PrimeNG is Ready</h2>
      <p-button label="BNP Paribas Theme Test" icon="pi pi-check"></p-button>
    </div>
    <router-outlet></router-outlet>
  `
})
export class AppComponent {
  title = 'policy-portal';
}
----

import { ApplicationConfig } from '@angular/core';
import { provideRouter } from '@angular/router';
import { routes } from './app.routes';
import { provideAnimationsAsync } from '@angular/platform-browser/animations/async';
import { providePrimeNG } from 'primeng/config';
import Aura from '@primeuix/themes/aura';
import { definePreset } from '@primeuix/themes';

// Define our custom BNP Paribas Green preset based on the modern Aura theme
const BNPParibasPreset = definePreset(Aura, {
  semantic: {
    primary: {
      50: '#eaf4f1',
      100: '#cbe4db',
      200: '#9bc9b9',
      300: '#6aae97',
      400: '#43997d',
      500: '#00915a', // BNP Green 600
      600: '#008351',
      700: '#007045', // BNP Green 800
      800: '#005635',
      900: '#00462c',
      950: '#002818'
    }
  }
});

export const appConfig: ApplicationConfig = {
  providers: [
    provideRouter(routes),
    provideAnimationsAsync(),
    providePrimeNG({
      theme: {
        preset: BNPParibasPreset,
        options: { darkModeSelector: 'none' } // Force light theme for standard enterprise UI
      }
    })
  ]
};

